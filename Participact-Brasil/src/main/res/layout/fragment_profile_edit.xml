<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryDark"
    android:orientation="vertical"
    android:padding="0dp">

    <FrameLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_pic"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/no_profile_pic"
            app:border_color="#fff"
            app:border_width="2dp" />

        <ImageButton
            android:id="@+id/button_picture"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:alpha="0.7"
            android:background="@null"
            android:src="@drawable/ic_photo_camera_white_36dp" />

    </FrameLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="30dp"
        android:background="#fff">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <EditText
                android:id="@+id/name"
                style="@style/EditTextBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_account_box_black_24dp"
                android:drawablePadding="4dp"
                android:hint="@string/prompt_name"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:maxLines="1" />

            <EditText
                android:id="@+id/surname"
                style="@style/EditTextBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_account_box_black_24dp"
                android:drawablePadding="4dp"
                android:hint="@string/surname"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:maxLines="1" />

            <EditText
                android:id="@+id/phone"
                style="@style/EditTextBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_phone_black_24dp"
                android:drawablePadding="4dp"
                android:hint="@string/prompt_phone"
                android:imeOptions="actionNext"
                android:inputType="phone"
                android:maxLines="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/address"
                    style="@style/EditTextBackground"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight=".7"
                    android:drawableLeft="@drawable/ic_location_city_black_24dp"
                    android:drawablePadding="4dp"
                    android:hint="@string/prompt_address"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:maxLines="1" />

                <EditText
                    android:id="@+id/number"
                    style="@style/EditTextBackground"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight=".3"
                    android:drawablePadding="4dp"
                    android:hint="@string/number"
                    android:imeOptions="actionNext"
                    android:inputType="number"
                    android:maxLines="1" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/province"
                    style="@style/EditTextBackground"
                    android:layout_width="0dp"
                    android:layout_weight=".55"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:drawableLeft="@drawable/ic_location_city_black_24dp"
                    android:drawablePadding="4dp"
                    android:hint="@string/province"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:maxLines="1" />

                <EditText
                    android:id="@+id/cep"
                    style="@style/EditTextBackground"
                    android:layout_width="0dp"
                    android:layout_weight=".45"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="10dp"
                    android:drawablePadding="4dp"
                    android:hint="CEP (00000-000)"
                    android:imeOptions="actionNext"
                    android:inputType="textCapWords"
                    android:maxLines="1" />

            </LinearLayout>

            <!--CITY-->
            <EditText
                android:id="@+id/city"
                style="@style/EditTextBackground"
                android:layout_width="match_parent"
                android:layout_weight=".55"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_location_city_black_24dp"
                android:drawablePadding="4dp"
                android:hint="@string/city"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:maxLines="1" />

            <!--COUNTRY-->
            <EditText
                android:id="@+id/country"
                style="@style/EditTextBackground"
                android:layout_width="match_parent"
                android:layout_weight=".55"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_location_city_black_24dp"
                android:drawablePadding="4dp"
                android:hint="@string/country"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:maxLines="1" />

            <!--GENDER-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_stroke"
                android:layout_marginTop="10dp"
                android:paddingTop="6dp"
                android:paddingLeft="6dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_accessibility_black_24dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="6dp"
                    android:layout_marginTop="6dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textSize="12dp"
                        android:text="@string/gender"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="8dp"
                        android:background="#999"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/button_male"
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:background="@null"
                            android:gravity="left|center_vertical"
                            android:text="@string/male"/>

                        <ImageView
                            android:id="@+id/image_check_male"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="4dp"
                            android:tint="#000"
                            android:src="@drawable/ic_done"/>

                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#999"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/button_female"
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:background="@null"
                            android:gravity="left|center_vertical"
                            android:text="@string/female"/>

                        <ImageView
                            android:id="@+id/image_check_female"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="4dp"
                            android:tint="#000"
                            android:src="@drawable/ic_done"/>

                    </FrameLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#999"/>

                    <FrameLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/button_other"
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:background="@null"
                            android:gravity="left|center_vertical"
                            android:text="@string/other"/>

                        <ImageView
                            android:id="@+id/image_check_other"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_gravity="right|center_vertical"
                            android:layout_marginRight="4dp"
                            android:tint="#000"
                            android:src="@drawable/ic_done"/>

                    </FrameLayout>

                </LinearLayout>

            </LinearLayout>

            <EditText
                android:id="@+id/birthday"
                style="@style/EditTextBackground"
                android:layout_width="match_parent"
                android:layout_weight=".55"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_grade_black_24dp"
                android:drawablePadding="4dp"
                android:hint="@string/birthday_hint"
                android:imeOptions="actionNext"
                android:inputType="textCapWords"
                android:maxLines="1" />

            <!--PASSWORD-->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/password_update"
                android:textColor="#333"
                android:textSize="12dp" />

            <EditText
                android:id="@+id/password"
                style="@style/EditTextBackground"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:drawableLeft="@drawable/ic_lock_black_24dp"
                android:drawablePadding="4dp"
                android:hint="@string/prompt_password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:maxLines="1" />

            <!--SAVE-->
            <Button
                android:id="@+id/button_save"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginTop="30dp"
                android:background="#3eb4bf"
                android:drawableLeft="@drawable/ic_save_black_24dp"
                android:drawablePadding="4dp"
                android:drawableRight="@drawable/ic_blank_24dp"
                android:drawableTint="#fff"
                android:gravity="center"
                android:paddingLeft="6dp"
                android:layout_marginBottom="20dp"
                android:text="@string/save"
                android:textColor="#fff" />

        </LinearLayout>

    </ScrollView>


</LinearLayout>