            <!--android:layout_height="wrap_content"-->
            <!--android:layout_marginTop="16dp"-->
            <!--android:text="Para mais informações sobre os resultados da campanha, acesse:"-->
            <!--android:textStyle="bold"/>-->

        <!--<TextView-->
