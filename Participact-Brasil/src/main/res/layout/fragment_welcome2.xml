<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorPrimaryDark"
    tools:context=".activities.welcome.WelcomeActivity">


    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:paddingTop="32dp"
        android:paddingBottom="10dp"
        android:textColor="#FFF"
        android:text="OBJETIVO DO PROJETO"/>

    <TextView
        android:gravity="center"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Projetar, promover e desenvolver um sistema de gestão sócio técnica para formar gradual e progressivamente um “big data” para analisar problemas de uma região urbana"/>


    <TextView
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:textSize="18sp"
        android:textColor="#FFF"
        android:paddingTop="32dp"
        android:paddingBottom="10dp"
        android:text="BASEADO NOS CONCEITOS DE SMART CITY"/>

    <TextView
        android:gravity="center"
        android:textColor="#FFF"
        android:textSize="16sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="O ParticipACT Brasil irá captar informações urbanas por meio do uso inovador de Tecnologias da Informação e Comunicação (TIC) para ajudar a fundamentar a tomada de decisão de gestores públicos e privados."/>

</LinearLayout>
