<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#45BD01">

    <TextView
        android:id="@+id/version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3.0.0"
        android:textColor="#fff"
        android:textSize="16dp"
        android:textStyle="bold"
        android:layout_gravity="right"
        android:layout_margin="20dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="40dp"
        android:layout_gravity="center"
        android:onClick="testAction"
        android:src="@mipmap/logo"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_gravity="bottom"
        android:layout_marginBottom="20dp">

        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:indeterminateTint="#fff"
            android:layout_gravity="center_horizontal"/>

        <TextView
            android:id="@+id/textError"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="#fff"
            android:textSize="16dp"
            android:gravity="center_horizontal"
            android:text="Ocorreu um erro de comunicação com o servidor. Por favor, verifique sua conexão com a internet e tente novamente."/>


        <Button
            android:id="@+id/buttonRetry"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#7000"
            android:layout_marginTop="8dp"
            android:onClick="retryAction"
            android:textSize="14dp"
            android:textColor="#fff"
            android:text="TENTAR NOVAMENTE"/>

    </LinearLayout>

