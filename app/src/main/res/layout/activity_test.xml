                    android:layout_weight="1"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="#fff"
                    android:gravity="center_vertical|end"
                    android:textSize="14dp"
                    android:text="ID"/>

