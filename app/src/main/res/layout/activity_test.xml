                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical">

                    <ProgressBar
                        android:id="@+id/progressId"
                        android:layout_width="14dp"
                        android:layout_height="14dp"
                        android:indeterminateTint="#fff"
                        android:layout_gravity="center_vertical"/>

