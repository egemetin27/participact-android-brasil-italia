                    android:layout_weight=".2"
                    android:layout_marginEnd="8dp"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="#fff"
                    android:gravity="center_vertical|center_horizontal"
                    android:textSize="14dp"
                    android:text=":"/>

