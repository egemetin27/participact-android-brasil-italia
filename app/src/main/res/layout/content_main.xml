<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".modules.activities.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <FrameLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="48dp">

    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#6000" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="horizontal">

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:onClick="tabCampaignsClick">

                <View
                    android:id="@+id/tabCampaignsSelection"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="@color/colorTabSelected" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/tab_margin"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/tabCampaignsIcon"
                        android:layout_width="@dimen/tab_icon_size"
                        android:layout_height="@dimen/tab_icon_size"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_tab_campaign_grey" />

                    <TextView
                        android:id="@+id/tabCampaignsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="CAMPANHAS"
                        android:textColor="@color/colorTabSelectedText"
                        android:textSize="9dp" />

                </LinearLayout>


            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:onClick="tabMapClick">

                <View
                    android:id="@+id/tabMapSelection"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="#fff" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/tab_margin"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/tabMapIcon"
                        android:layout_width="@dimen/tab_icon_size"
                        android:layout_height="@dimen/tab_icon_size"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_tab_map" />

                    <TextView
                        android:id="@+id/tabMapText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="MAPA"
                        android:textColor="@color/colorTabUnselectedText"
                        android:textSize="9dp" />

                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:onClick="tabStatisticsClick">

                <View
                    android:id="@+id/tabStatisticsSelection"
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="#fff" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/tab_margin"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/tabStatisticsIcon"
                        android:layout_width="@dimen/tab_icon_size"
                        android:layout_height="@dimen/tab_icon_size"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_tab_statistics" />

                    <TextView
                        android:id="@+id/tabStatisticsText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="ESTATÍSTICAS"
                        android:textColor="@color/colorTabUnselectedText"
                        android:textSize="9dp" />

                </LinearLayout>

            </FrameLayout>

            <FrameLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".25"
                android:onClick="menuClick">

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:background="#fff" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="@dimen/tab_margin"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/tab_icon_size"
                        android:layout_height="@dimen/tab_icon_size"
                        android:layout_gravity="center"
                        android:src="@mipmap/ic_tab_more" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:textColor="@color/colorTabUnselectedText"
                        android:text="MAIS"
                        android:textSize="9dp" />

                </LinearLayout>

                <TextView
                    android:id="@+id/text_notifications_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/bg_badge_12"
                    android:gravity="center"
                    android:minWidth="12dp"
                    android:text="2"
                    android:textColor="#fff"
                    android:textSize="8dp"
                    android:textStyle="bold" />

            </FrameLayout>

        </LinearLayout>

    </LinearLayout>


</FrameLayout>