<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:paddingLeft="16dp"
            android:text="Gravar audio"
            android:textColor="#B4BF96"
            android:textSize="24dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:fontFamily="@font/roboto_regular"
                android:text="Pressiona e segure o botão abaixo para começar a gravar."
                android:textColor="#000"
                android:textSize="14dp" />
            
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp">
                
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal">
                    
                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/ic_mic_48pt"/>

                    <TextView
                        android:id="@+id/textTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="8dp"
                        android:gravity="center_vertical"
                        android:fontFamily="@font/roboto_bold"
                        android:textSize="24dp"
                        android:textColor="#000"
                        android:text="00:00"/>
                    
                </LinearLayout>
                
                <ImageButton
                    android:id="@+id/buttonPlay"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_gravity="center_vertical|right"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_play_arrow_48pt"/>
                
            </FrameLayout>


        </LinearLayout>



        <ImageButton
            android:id="@+id/buttonRecord"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:padding="10dp"
            android:background="@null"
            android:scaleType="fitCenter"
            android:src="@mipmap/ic_mic_48pt"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#E0E0E0"
            android:layout_marginTop="16dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/buttonCancel"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".5"
                android:background="@null"
                android:text="EXCLUIR"
                android:textSize="14dp"
                android:textColor="#FF2600"
                android:fontFamily="@font/roboto_medium"/>

            <Button
                android:id="@+id/buttonUse"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight=".5"
                android:background="@null"
                android:text="USAR"
                android:textSize="14dp"
                android:textColor="#4EC500"
                android:fontFamily="@font/roboto_medium"/>

        </LinearLayout>

    </LinearLayout>

